#ifndef CARD_H
#define CARD_H

#include <utility>
#include <string>
#include <tuple>

namespace Solitaire
{
  typedef std::tuple<char, char, char> Position;

  class Card {
  public:

    virtual ~Card(){}

    bool is_red()   { return red; }

    bool is_covered()   { return covered; }

    virtual char to_ascii()   = 0;

    virtual std::string to_unicode()   = 0;

  protected:
  Card(bool is_red, bool is_covered) : red(is_red), covered(is_covered) {}
  private:
    bool red;
    bool covered;
  };
}
#endif

  
