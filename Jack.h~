#ifndef JACK_H
#define JACK_H

#include <string>
#include "Card.h"


namespace Solitaire
{
  class King : public Card {

  public:

    char to_ascii()   override { return "K"; }

    char get_lower()   override { return "?"; }

    char get_upper()   override { return "Q"; }

    std::string to_unicode()   override {
      if(suit == "hearts") {
        return "\u1F0BE";
      }
      else if (suit == "diamonds") {
        return "\u1F0CE";
      }
      else if (suit == "clubs") {
        return "\u1F0AE";
      }
      else {
        return"\u1F0DE";
      }
    }
  };
}
#endif
